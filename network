config interface 'loopback'
        option ifname 'lo'
        option proto 'static'
        option ipaddr '127.0.0.1'
        option netmask '255.0.0.0'

config interface 'wan'
        option type 'bridge'
        option _orig_ifnme 'eth1.2'
        option _orig_bridge 'true'
        option ifname 'eth0.2'
        option proto 'dhcp'
        option hostname 'OW-UE-1'

config switch
        option name 'switch0'
        option reset '1'
        option enable_vlan '1'

config switch_vlan
        option device 'switch0'
        option vlan '2'
        option ports '0t 1t 2t 3t 4t'
        option vid '2'

config switch_vlan                   
        option device 'switch0'      
        option vlan '3'              
        option vid '3'               
        option ports '0t 1t 2t 3t 4t'
                                     
config interface 'freifunk'          
        option type 'bridge'         
        option proto 'none'          
        option auto '1'              
        option accept_ra '1'         
        option macaddr 'a0:f3:c1:05:77:f2'
        option _orig_ifname 'bat0 radio0.network1'
        option _orig_bridge 'true'                
        option ifname 'bat0'     
        
config interface 'privat'                         
        option type 'bridge'                      
        option auto '1'                           
        option accept_ra '1'                      
        option _orig_ifname 'bat0 eth0 eth1 radio0.network2'
        option _orig_bridge 'true'                          
        option proto 'dhcp'                                 
        option ifname 'eth0 eth1.2'                         
        option hostname 'OW-UE-1'                           
                                                            
config interface 'mesh'                                     
        option proto 'batadv'                               
        option mtu '1528'                                   
        option mesh 'bat0'                                  
                                                            
config interface 'mesh_vpn'                                 
        option ifname 'mesh-vpn'                            
        option proto 'batadv'                               
        option mesh 'bat0'                                  
        option macaddr 'a2:f3:c1:06:77:f2'

config interface 'mesh_lan'                                 
        option ifname 'eth1.3'                              
        option proto 'batadv'                               
        option mesh 'bat0'                                  
        option macaddr 'a3:f3:c1:06:77:f2'          
